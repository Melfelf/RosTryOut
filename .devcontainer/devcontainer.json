{
    "name": "ROS2 Humble ARM64",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "runArgs": [
        "--privileged",
        "--network=host",
        "--platform=linux/arm64",
        "-e",
        "DISPLAY=${env:DISPLAY}"
    ],
    "remoteUser": "ros",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "remoteEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    },
    "postCreateCommand": "sudo chown -R ros:ros /home/ros/ros2_ws"
}